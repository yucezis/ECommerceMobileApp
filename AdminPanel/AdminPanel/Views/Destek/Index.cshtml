@model List<AdminPanel.Models.MusteriViewModel>

@{
    ViewData["Title"] = "Destek Talepleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-chat-dots"></i> Müşteri Mesajları</h4>
        </div>
        <div class="list-group list-group-flush">
            @if (Model.Count == 0)
            {
                <div class="p-4 text-center text-muted">Henüz hiç mesaj yok.</div>
            }
            @foreach (var musteri in Model)
            {
                <a href="/Destek/Sohbet?musteriId=@musteri.MusteriId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="bi bi-person-fill fs-4 text-secondary"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">@musteri.MusteriAdi @musteri.MusteriSoyadi</h5>
                            <small class="text-muted">@musteri.MusteriMail</small>
                        </div>
                    </div>
                    <span class="btn btn-sm btn-outline-primary">Mesajları Gör <i class="bi bi-chevron-right"></i></span>
                </a>
            }
        </div>
    </div>
</div>