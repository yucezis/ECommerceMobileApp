@using AdminPanel.Models
@model List<MesajViewModel>

@if (Model != null && Model.Count > 0)
{
    foreach (var mesaj in Model)
    {
        <div class="message-container">

            <div class="message-bubble @(mesaj.GonderenAdminMi ? "admin-msg" : "customer-msg")">

                @mesaj.Icerik

                <span class="msg-time">
                    @mesaj.Tarih.ToString("HH:mm")

                    @if (mesaj.GonderenAdminMi)
                    {
                        <i class="bi bi-check2-all ms-1"></i>
                    }
                </span>

            </div>
        </div>
    }
}
else
{
    <div class="d-flex flex-column align-items-center justify-content-center h-100 mt-5 opacity-50">
        <i class="bi bi-chat-square-text fs-1 mb-2"></i>
        <p>Henüz bir mesajlaşma geçmişi yok.</p>
    </div>
}