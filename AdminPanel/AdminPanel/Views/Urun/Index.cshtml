@using Microsoft.AspNetCore.Mvc.Rendering
@using AdminPanel.Models
@model List<UrunViewModel>

@{
    ViewData["Title"] = "Kitaplar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f8ff;
        transition: background-color 0.2s ease;
    }

    .card {
        border-radius: 16px;
    }

    .btn-outline-primary, .btn-outline-success, .btn-outline-danger {
        border-radius: 20px;
    }

    .modal-content {
        border-radius: 16px;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control, .form-select, textarea {
        border-radius: 10px;
    }
</style>

<!-- Ürün Ekle Modalı -->
<div class="modal fade" id="urunEkleModal" tabindex="-1" aria-labelledby="urunEkleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <form asp-controller="Urun" asp-action="UrunEkle" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-semibold">
                        <i class="bi bi-plus-circle me-2"></i> Yeni Ürün Ekle
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Kitap Adı</label>
                            <input type="text" class="form-control" name="UrunAdi" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Yazar</label>
                            <input type="text" class="form-control" name="UrunYazar" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Yayınevi</label>
                            <input type="text" class="form-control" name="UrunMarka" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Stok</label>
                            <input type="number" class="form-control" name="UrunStok" value="0" />
                        </div>

                       @*  <div class="col-md-3">
                            <label class="form-label">Stok Durumu</label>
                            <select class="form-select" name="UrunStokDurum">
                                <option value="True" selected>Var</option>
                                <option value="False">Yok</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Ürün Durumu</label>
                            <select class="form-select" name="Durum">
                                <option value="True" selected>Aktif</option>
                                <option value="False">Pasif</option>
                            </select>
                        </div> *@

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="UrunStokDurum" value="true" checked />
                            <label class="form-check-label">Stokta Var</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Durum" value="true" checked />
                            <label class="form-check-label">Aktif</label>
                        </div>


                        <div class="col-md-6">
                            <label class="form-label">Satış Fiyatı</label>
                            <input type="number" step="0.01" class="form-control" name="UrunSatisFiyati" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">İndirimli Fiyat</label>
                            <input type="number" step="0.01" class="form-control" name="IndirimliFiyat" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Kategori</label>
                            @* <select class="form-select" name="KategoriID" required>
                                <option value="">--Kategori Seçiniz--</option>
                                @foreach (var item in ViewBag.Kategoriler)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select> *@
                            <select class="form-select" name="KategoriID" required>
                                <option value="">--Kategori Seçiniz--</option>
                                @foreach (var item in ViewBag.Kategoriler)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>

                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Görsel URL</label>
                            <input type="text" class="form-control" name="UrunGorsel" placeholder="https://..." />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Açıklama</label>
                            <textarea class="form-control" rows="3" name="Aciklama" placeholder="Ürün hakkında kısa bilgi..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save2 me-1"></i> Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-book me-2"></i> Kitaplar</h3>
            <button type="button" class="btn btn-light btn-sm fw-semibold" data-bs-toggle="modal" data-bs-target="#urunEkleModal">
                <i class="bi bi-plus-circle me-1"></i> Yeni Ürün Ekle
            </button>
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Id</th>
                            <th>Kategori</th>
                            <th>Adı</th>
                            <th>Yazar</th>
                            <th>Yayınevi</th>
                            <th>Stok</th>
                            <th>Durum</th>
                            <th>Satış ₺</th>
                            <th>İndirim ₺</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UrunId</td>
                                <td>@u.Kategori?.KategoriAdi</td>
                                <td>@u.UrunAdi</td>
                                <td>@u.UrunYazar</td>
                                <td>@u.UrunMarka</td>
                                <td>@u.UrunStok</td>
                                <td>
                                    @if (u.Durum)
                                    {
                                        <span class="badge bg-success px-3 py-2">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">Pasif</span>
                                    }
                                </td>
                                <td>@u.UrunSatisFiyati.ToString("C")</td>
                                <td>@(u.IndirimliFiyat.HasValue ? u.IndirimliFiyat.Value.ToString("C") : "-")</td>

                                <td>
                                    <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </td>

                                <td>
                                    <button class="btn btn-outline-success btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#guncelleModal-@u.UrunId">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <!-- Güncelle Modalı -->
                                    <div class="modal fade" id="guncelleModal-@u.UrunId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-lg modal-dialog-centered">
                                            <div class="modal-content shadow-lg border-0">
                                                <form asp-action="UrunGuncelle" method="post">
                                                    <input type="hidden" name="UrunId" value="@u.UrunId" />

                                                    <div class="modal-header bg-success text-white">
                                                        <h5 class="modal-title fw-semibold">
                                                            <i class="bi bi-pencil-square me-2"></i> Ürün Güncelle
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                    </div>

                                                    <div class="modal-body">
                                                        <div class="row g-3">
                                                            <div class="col-md-6">
                                                                <label class="form-label">Kitap Adı</label>
                                                                <input type="text" class="form-control" name="UrunAdi" value="@u.UrunAdi" />
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">Yazar</label>
                                                                <input type="text" class="form-control" name="UrunYazar" value="@u.UrunYazar" />
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">Yayınevi</label>
                                                                <input type="text" class="form-control" name="UrunMarka" value="@u.UrunMarka" />
                                                            </div>

                                                            <div class="col-md-3">
                                                                <label class="form-label">Stok</label>
                                                                <input type="number" class="form-control" name="UrunStok" value="@u.UrunStok" />
                                                            </div>

                                                            <div class="col-md-3">
                                                                <label class="form-label">Stok Durumu</label>
                                                                <select class="form-select" name="UrunStokDurum">
                                                                    <option value="true" selected="@u.UrunStokDurum">Var</option>
                                                                    <option value="false" selected="@(!u.UrunStokDurum)">Yok</option>
                                                                </select>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">Ürün Durumu</label>
                                                                <select class="form-select" name="Durum">
                                                                    <option value="true" selected="@u.Durum">Aktif</option>
                                                                    <option value="false" selected="@(!u.Durum)">Pasif</option>
                                                                </select>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">Kategori</label>
                                                                <select class="form-select" name="KategoriID">
                                                                    @foreach (SelectListItem item in ViewBag.Kategoriler)
                                                                    {
                                                                        <option value="@item.Value" selected="@(item.Value == u.KategoriID.ToString())">@item.Text</option>
                                                                    }
                                                                </select>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">Satış Fiyatı</label>
                                                                <input type="number" step="0.01" class="form-control"
                                                                       name="UrunSatisFiyati"
                                                                       value="@u.UrunSatisFiyati.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" />
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">İndirimli Fiyat</label>
                                                                <input type="number" step="0.01" class="form-control"
                                                                       name="IndirimliFiyat"
                                                                       value="@(u.IndirimliFiyat.HasValue ? u.IndirimliFiyat.Value.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture) : "")" />
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label class="form-label">Görsel URL</label>
                                                                <input type="text" class="form-control" name="UrunGorsel" value="@u.UrunGorsel" />
                                                            </div>

                                                            <div class="col-12">
                                                                <label class="form-label">Açıklama</label>
                                                                <textarea class="form-control" rows="3" name="Aciklama">@u.Aciklama</textarea>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="modal-footer bg-light">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            <i class="bi bi-x-circle me-1"></i> İptal
                                                        </button>
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-check-circle me-1"></i> Kaydet
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
