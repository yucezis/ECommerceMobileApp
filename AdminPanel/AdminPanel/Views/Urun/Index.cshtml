@using Microsoft.AspNetCore.Mvc.Rendering
@using AdminPanel.Models
@model List<UrunViewModel>

@{
    ViewData["Title"] = "Kitaplar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.3rem;
    }

    .modal-header {
        border-bottom: 0;
    }

    .modal-footer {
        border-top: 0;
    }
</style>

<div class="container-fluid mt-4">

    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body d-flex justify-content-between align-items-center p-4">
            <div>
                <h3 class="mb-1 fw-bold text-primary"><i class="bi bi-book-half me-2"></i>Kitap Yönetimi</h3>
                <p class="text-muted mb-0">Toplam @Model.Count adet kitap listeleniyor.</p>
            </div>
            <button type="button" class="btn btn-primary px-4 py-2 rounded-pill fw-semibold shadow-sm"
                    data-bs-toggle="modal" data-bs-target="#urunEkleModal">
                <i class="bi bi-plus-lg me-2"></i>Yeni Kitap Ekle
            </button>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="py-3">Görsel</th>
                            <th class="py-3">Adı & Yazar</th>
                            <th class="py-3">Kategori</th>
                            <th class="py-3">Fiyat</th>
                            <th class="py-3">Stok</th>
                            <th class="py-3">Durum</th>
                            <th class="py-3" style="width: 150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(u.UrunGorsel))
                                    {
                                        <img src="@u.UrunGorsel" alt="Kapak" class="rounded shadow-sm" width="50" height="75" style="object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center mx-auto" style="width: 50px; height: 75px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>

                                <td class="text-start">
                                    <div class="fw-bold text-dark">@u.UrunAdi</div>
                                    <div class="small text-muted">@u.UrunYazar</div>
                                    <div class="small text-muted fst-italic">@u.UrunMarka</div>
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @(u.Kategori?.KategoriAdi ?? "Genel")
                                    </span>
                                </td>

                                <td>
                                    <div class="fw-bold text-primary">@u.UrunSatisFiyati.ToString("C")</div>
                                    @if (u.IndirimliFiyat.HasValue && u.IndirimliFiyat > 0)
                                    {
                                        <small class="text-decoration-line-through text-muted">@u.IndirimliFiyat.Value.ToString("C")</small>
                                    }
                                </td>

                                <td>
                                    @if (u.UrunStok < 5)
                                    {
                                        <span class="text-danger fw-bold">@u.UrunStok <i class="bi bi-exclamation-circle-fill"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-success fw-bold">@u.UrunStok</span>
                                    }
                                </td>

                                <td>
                                    @if (u.Durum)
                                    {
                                        <span class="badge bg-success text-white px-3 py-2 rounded-pill">Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary text-white px-3 py-2 rounded-pill">Pasif</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button class="btn btn-outline-warning btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#guncelleModal-@u.UrunId"
                                                title="Düzenle">
                                            <i class="bi bi-pencil-fill"></i>
                                        </button>

                                        <a href="@Url.Action("UrunSil", "Urun", new { id = u.UrunId })"
                                           class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('@u.UrunAdi kitabını silmek istediğinize emin misiniz?');"
                                           title="Sil">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>

                                    <div class="modal fade" id="guncelleModal-@u.UrunId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-lg modal-dialog-centered">
                                            <div class="modal-content border-0 shadow">
                                                <form asp-action="UrunGuncelle" method="post">
                                                    <input type="hidden" name="UrunId" value="@u.UrunId" />

                                                    <div class="modal-header bg-warning bg-opacity-10">
                                                        <h5 class="modal-title text-warning text-dark fw-bold">
                                                            <i class="bi bi-pencil-square me-2"></i>Ürün Güncelle
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>

                                                    <div class="modal-body p-4 text-start">
                                                        <div class="row g-3">
                                                            <div class="col-md-6">
                                                                <label class="form-label">Kitap Adı</label>
                                                                <input type="text" class="form-control" name="UrunAdi" value="@u.UrunAdi" required />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label class="form-label">Yazar</label>
                                                                <input type="text" class="form-control" name="UrunYazar" value="@u.UrunYazar" />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label class="form-label">Yayınevi</label>
                                                                <input type="text" class="form-control" name="UrunMarka" value="@u.UrunMarka" />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label class="form-label">Kategori</label>
                                                                <select class="form-select" name="KategoriID" required>
                                                                    @if (ViewBag.Kategoriler != null)
                                                                    {
                                                                        @foreach (var cat in (List<SelectListItem>)ViewBag.Kategoriler)
                                                                        {
                                                                            <option value="@cat.Value" selected="@(cat.Value == u.KategoriID.ToString())">@cat.Text</option>
                                                                        }
                                                                    }
                                                                </select>
                                                            </div>

                                                            <hr class="text-muted my-2">

                                                            <div class="col-md-6">
                                                                <label class="form-label">Satış Fiyatı (₺)</label>
                                                                <input type="text" class="form-control" name="UrunSatisFiyati"
                                                                       value="@u.UrunSatisFiyati.ToString(System.Globalization.CultureInfo.InvariantCulture)" required />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label class="form-label">İndirimli Fiyat (Opsiyonel)</label>
                                                                <input type="text" class="form-control" name="IndirimliFiyat"
                                                                       value="@(u.IndirimliFiyat.HasValue ? u.IndirimliFiyat.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "")" />
                                                            </div>

                                                            <div class="col-md-4">
                                                                <label class="form-label">Stok Adedi</label>
                                                                <input type="number" class="form-control" name="UrunStok" value="@u.UrunStok" required />
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label class="form-label">Stok Durumu</label>
                                                                <select class="form-select" name="UrunStokDurum">
                                                                    <option value="true" selected="@(u.UrunStokDurum)">Stokta Var</option>
                                                                    <option value="false" selected="@(!u.UrunStokDurum)">Tükendi</option>
                                                                </select>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label class="form-label">Yayın Durumu</label>
                                                                <select class="form-select" name="Durum">
                                                                    <option value="true" selected="@(u.Durum)">Aktif (Yayında)</option>
                                                                    <option value="false" selected="@(!u.Durum)">Pasif (Gizle)</option>
                                                                </select>
                                                            </div>

                                                            <div class="col-12">
                                                                <label class="form-label">Görsel URL</label>
                                                                <input type="text" class="form-control" name="UrunGorsel" value="@u.UrunGorsel" />
                                                            </div>
                                                            <div class="col-12">
                                                                <label class="form-label">Açıklama</label>
                                                                <textarea class="form-control" rows="3" name="Aciklama">@u.Aciklama</textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer bg-light">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                        <button type="submit" class="btn btn-warning">Güncelle</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="urunEkleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <form asp-controller="Urun" asp-action="UrunEkle" method="post">

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold"><i class="bi bi-plus-circle-fill me-2"></i>Yeni Ürün Oluştur</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Kitap Adı <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="UrunAdi" required placeholder="Örn: Sefiller" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Yazar</label>
                            <input type="text" class="form-control" name="UrunYazar" placeholder="Örn: Victor Hugo" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Yayınevi</label>
                            <input type="text" class="form-control" name="UrunMarka" placeholder="Örn: İş Bankası Yayınları" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Kategori <span class="text-danger">*</span></label>
                            @if (ViewBag.Kategoriler != null)
                            {
                                <select class="form-select" name="KategoriID" required>
                                    <option value="">-- Kategori Seçiniz --</option>
                                    @foreach (var item in (List<SelectListItem>)ViewBag.Kategoriler)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <div class="text-danger small">Kategoriler yüklenemedi. Sayfayı yenileyin.</div>
                            }
                        </div>

                        <hr class="text-muted my-2">

                        <div class="col-md-6">
                            <label class="form-label">Satış Fiyatı (₺) <span class="text-danger">*</span></label>
                            <input type="number" step="0.01" class="form-control" name="UrunSatisFiyati" required placeholder="0.00" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">İndirimli Fiyat</label>
                            <input type="number" step="0.01" class="form-control" name="IndirimliFiyat" placeholder="Opsiyonel" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Stok Adedi <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="UrunStok" value="1" min="0" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Stok Durumu</label>
                            <select class="form-select" name="UrunStokDurum">
                                <option value="true" selected>Stokta Var</option>
                                <option value="false">Tükendi</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Yayın Durumu</label>
                            <select class="form-select" name="Durum">
                                <option value="true" selected>Aktif (Yayında)</option>
                                <option value="false">Pasif (Gizle)</option>
                            </select>
                        </div>

                        <hr class="text-muted my-2">

                        <div class="col-12">
                            <label class="form-label">Görsel Linki (URL)</label>
                            <input type="text" class="form-control" name="UrunGorsel" placeholder="https://..." />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Açıklama</label>
                            <textarea class="form-control" name="Aciklama" rows="3" placeholder="Kitap hakkında kısa bilgi..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save2 me-2"></i>Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>