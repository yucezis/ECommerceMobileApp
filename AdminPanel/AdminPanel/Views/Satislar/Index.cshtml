@using Microsoft.AspNetCore.Mvc.Rendering
@using AdminPanel.Models
@model List<SatislarViewModel>

@{
    ViewData["Title"] = "Satışlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .table thead th {
        font-weight: 600;
    }

    .table-hover tbody tr:hover {
        background-color: #fff8e1;
        transition: background-color 0.2s ease;
    }

    .card {
        border-radius: 16px;
    }

    .btn-outline-primary {
        border-radius: 20px;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.8em;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-receipt-cutoff me-2"></i> Satış Hareketleri</h3>
            @* <button class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-plus-circle-fill me-1"></i> Yeni Satış Ekle
            </button> *@
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="table-warning">
                        <tr>
                            <th>Ürün</th>
                            <th>Yayınevi</th>
                            <th>Müşteri</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam Tutar</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@(s.Urun != null ? s.Urun.UrunAdi : "—")</td>
                                <td>@(s.Urun != null ? s.Urun.UrunMarka : "—")</td>
                                <td>@(s.Musteri != null ? s.Musteri.MusteriAdi + " " + s.Musteri.MusteriSoyadi : "—")</td>
                                <td><span class="badge bg-secondary">@s.Adet</span></td>
                                <td>@s.Fiyat ₺</td>
                                <td class="fw-semibold text-success">@s.ToplamTutar ₺</td>
                                <td>@s.Tarih.ToString("dd.MM.yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
